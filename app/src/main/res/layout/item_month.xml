<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_normal_day_view"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="3">

    </TextView>

    <RelativeLayout
        android:id="@+id/layout_event_holiday"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_day"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/layout_holidays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_half_holiday"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/bg_circle_test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_full_holiday"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_circle_full_holiday"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_event_ptm"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_circle_ptm_grediant"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_event_field_trip"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_circle_field_trip_grediant"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_event_remainder"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_circle_remainder_grediant"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>